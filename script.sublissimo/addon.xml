<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.sublissimo" name="Sublissimo" version="0.0.1" provider-name="AJVM">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>


    </requires>
    <extension point="xbmc.python.script" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Edit and synchronize subtitles with your remote</summary>
        <description lang="en_GB">With Sublissimo, it is no longer necessary to leave Kodi to modify your Subtitles. With this script you can edit specific lines, remove obnoxious commercials, move or stretch subtitles, search for specific lines and synchronize with other subtitles. You can also synchronize with a videofile.</description>
        <language>English</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website></website>
        <email>drinkblacklabel@gmail.com</email>
        <source>https://github.com/Allertj/script.sublissimo</source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
